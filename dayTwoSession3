#find files equal to 2M in ~ dir +M is for MB G is for GB 

find ~ -type f -size +2k  -exec ls -sh {} \;

#find files bigger than 4GB

find . -type f -size +4G

#find files ahving size between 30M and 40M
find  / -size +30M -size -40M


#create a file of specific size

dd if=/dev/zero of=file.txt count=1024 bs=1048576 

